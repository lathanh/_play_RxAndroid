<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <import type="android.view.View"/>
    <import type="org.lathanh.play.loading.LoadingState"/>
    <variable name="userObservable"
              type="org.lathanh.play.rxandroid.demo.update.user_service.AndroidUserService.UserObservable"/>
    <variable name="viewHolder"
              type="org.lathanh.play.rxandroid.demo.update.DataUpdateDemoFragment.ViewHolder"/>
  </data>

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <!-- Action: Button/Progress -->
    <FrameLayout
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true">
      <Button
          android:id="@+id/button"
          android:text="Update"
          android:enabled="@{userObservable.loadingState == LoadingState.DATA}"
          android:visibility="@{userObservable.loadingState == LoadingState.DATA ? View.VISIBLE : View.INVISIBLE}"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:onClick="@{(view) -> viewHolder.onUpdateButtonClick()}"/>
      <ProgressBar
          android:visibility="@{userObservable.loadingState != LoadingState.DATA ? View.VISIBLE : View.INVISIBLE}"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
    </FrameLayout>

    <!-- Text -->
    <TextView
        android:id="@+id/text"
        android:text="@{userObservable.user.name}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@id/action"
        android:layout_toLeftOf="@id/action"
        style="@style/TextAppearance.AppCompat.Medium"/>
    <TextView
        android:id="@+id/text2"
        android:text="@{userObservable.dateString}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toStartOf="@id/action"
        android:layout_toLeftOf="@id/action"
        android:layout_below="@id/text"/>
  </RelativeLayout>
</layout>